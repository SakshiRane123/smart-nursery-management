<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Nursery Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/header') %>
    <%- include('../partials/navigation') %>

    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h2 class="mb-4">ðŸ“¦ My Orders</h2>
                
                <% if (orders.length === 0) { %>
                    <div class="alert alert-info">
                        <h4>No orders yet</h4>
                        <p>You haven't placed any orders yet. Start shopping to see your orders here!</p>
                        <a href="/customer/plants" class="btn btn-success">Browse Plants</a>
                    </div>
                <% } else { %>
                    <div class="card">
                        <div class="card-header">
                            <h5>Order History</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Order ID</th>
                                            <th>Date</th>
                                            <th>Items</th>
                                            <th>Total</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% orders.forEach(order => { %>
                                            <tr>
                                                <td>#<%= order.id %></td>
                                                <td><%= new Date(order.order_date).toLocaleDateString() %></td>
                                                <td><%= order.item_count %> items</td>
                                                <td>â‚¹<%= order.total_amount %></td>
                                                <td>
                                                    <span class="badge 
                                                        <% if (order.status === 'delivered') { %>bg-success<% } %>
                                                        <% if (order.status === 'pending') { %>bg-warning<% } %>
                                                        <% if (order.status === 'confirmed') { %>bg-info<% } %>
                                                        <% if (order.status === 'shipped') { %>bg-primary<% } %>
                                                        <% if (order.status === 'cancelled') { %>bg-danger<% } %>">
                                                        <%= order.status %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <a href="/customer/orders/<%= order.id %>" class="btn btn-sm btn-outline-primary">
                                                        View Details
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>