<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Nursery Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/header') %>
    <%- include('../partials/navigation') %>

    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h2 class="mb-4">üõí Shopping Cart</h2>
                
                <% if (cartItems.length === 0) { %>
                    <div class="alert alert-info">
                        <h4>Your cart is empty</h4>
                        <p>Start shopping to add plants to your cart!</p>
                        <a href="/customer/plants" class="btn btn-success">Browse Plants</a>
                    </div>
                <% } else { %>
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Cart Items (<%= cartItems.length %>)</h5>
                                </div>
                                <div class="card-body">
                                    <% cartItems.forEach(item => { %>
                                        <div class="cart-item mb-3 p-3 border rounded">
                                            <div class="row align-items-center">
                                                <div class="col-md-2">
                                                    <img src="<%= item.image_url || '/images/placeholder-plant.jpg' %>" 
                                                         alt="<%= item.name %>" 
                                                         class="img-fluid rounded" 
                                                         style="height: 80px; width: 80px; object-fit: cover;">
                                                </div>
                                                <div class="col-md-4">
                                                    <h6 class="mb-1"><%= item.name %></h6>
                                                    <p class="text-muted mb-0">‚Çπ<%= item.price %></p>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="input-group">
                                                        <button class="btn btn-outline-secondary minus-btn" 
                                                                data-plant-id="<%= item.plant_id %>">-</button>
                                                        <input type="number" class="form-control text-center quantity-input" 
                                                               value="<%= item.quantity %>" min="1" max="<%= item.stock_quantity %>"
                                                               data-plant-id="<%= item.plant_id %>">
                                                        <button class="btn btn-outline-secondary plus-btn" 
                                                                data-plant-id="<%= item.plant_id %>">+</button>
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <strong>‚Çπ<%= (item.price * item.quantity).toFixed(2) %></strong>
                                                </div>
                                                <div class="col-md-1">
                                                    <button class="btn btn-danger btn-sm remove-btn" 
                                                            data-plant-id="<%= item.plant_id %>">
                                                        ‚ùå
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    <% }); %>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-4">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Order Summary</h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Subtotal:</span>
                                        <span>‚Çπ<%= parseFloat(cartTotal || 0).toFixed(2) %></span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Shipping:</span>
                                        <span>‚Çπ50.00</span>
                                    </div>
                                    <hr>
                                    <div class="d-flex justify-content-between mb-3">
                                        <strong>Total:</strong>
                                        <strong>‚Çπ<%= (cartTotal + 50).toFixed(2) %></strong>
                                    </div>
                                    <a href="/customer/checkout" class="btn btn-success w-100">Proceed to Checkout</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script>
        // Add to cart functionality
        document.querySelectorAll('.plus-btn').forEach(btn => {
            btn.addEventListener('click', async () => {
                const plantId = btn.dataset.plantId;
                const input = document.querySelector(`.quantity-input[data-plant-id="${plantId}"]`);
                input.value = parseInt(input.value) + 1;
                await updateCart(plantId, input.value);
            });
        });

        document.querySelectorAll('.minus-btn').forEach(btn => {
            btn.addEventListener('click', async () => {
                const plantId = btn.dataset.plantId;
                const input = document.querySelector(`.quantity-input[data-plant-id="${plantId}"]`);
                if (input.value > 1) {
                    input.value = parseInt(input.value) - 1;
                    await updateCart(plantId, input.value);
                }
            });
        });

        document.querySelectorAll('.remove-btn').forEach(btn => {
            btn.addEventListener('click', async () => {
                const plantId = btn.dataset.plantId;
                await removeFromCart(plantId);
            });
        });

        async function updateCart(plantId, quantity) {
            try {
                const response = await fetch(`/customer/cart/update/${plantId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ quantity: quantity })
                });
                
                const result = await response.json();
                if (result.success) {
                    location.reload(); // Reload to update totals
                }
            } catch (error) {
                console.error('Error updating cart:', error);
            }
        }

        async function removeFromCart(plantId) {
            try {
                const response = await fetch(`/customer/cart/remove/${plantId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });
                
                const result = await response.json();
                if (result.success) {
                    location.reload();
                }
            } catch (error) {
                console.error('Error removing from cart:', error);
            }
        }
    </script>

    <%- include('../partials/footer') %>
</body>
</html>