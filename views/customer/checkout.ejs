<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Nursery Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/header') %>
    <%- include('../partials/navigation') %>

    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h2 class="mb-4">âœ… Checkout</h2>
                
                <!-- Replace the entire error section with this: -->
                <% if (typeof error !== 'undefined') { %>
                    <div class="alert alert-danger">
                        <%= error %>
                    </div>
                <% } %>
                
                <% if (typeof message !== 'undefined') { %>
                    <div class="alert alert-info">
                        <%= message %>
                    </div>
                <% } %>

                <div class="row">
                    <div class="col-lg-8">
                        <div class="card">
                            <div class="card-header">
                                <h5>Delivery Information</h5>
                            </div>
                            <div class="card-body">
                                <form action="/customer/orders/place" method="POST">
                                    <div class="mb-3">
                                        <label class="form-label">Full Name</label>
                                        <input type="text" class="form-control" 
                                               value="<%= user.first_name %> <%= user.last_name %>" readonly>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label class="form-label">Email</label>
                                        <input type="email" class="form-control" 
                                               value="<%= user.email %>" readonly>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label class="form-label">Phone</label>
                                        <input type="text" class="form-control" 
                                               value="<%= user.phone || 'Not provided' %>" readonly>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label class="form-label">Delivery Address *</label>
                                        <textarea class="form-control" name="delivery_address" 
                                                  rows="4" required placeholder="Enter your complete delivery address"></textarea>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label class="form-label">Delivery Instructions (Optional)</label>
                                        <textarea class="form-control" name="instructions" 
                                                  rows="2" placeholder="Any special delivery instructions?"></textarea>
                                    </div>
                                    
                                    <button type="submit" class="btn btn-success w-100">
                                        Place Order - â‚¹<%= (cartTotal + 50).toFixed(2) %>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-header">
                                <h5>Order Summary</h5>
                            </div>
                            <div class="card-body">
                                <% if (typeof cartItems !== 'undefined') { %>
                                    <% cartItems.forEach(item => { %>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span><%= item.name %> (Ã—<%= item.quantity %>)</span>
                                            <span>â‚¹<%= (parseFloat(item.price) * parseInt(item.quantity)).toFixed(2) %></span>
                                        </div>
                                    <% }); %>
                                <% } %>
                                
                                <hr>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Subtotal:</span>
                                    <span>â‚¹<%= cartTotal.toFixed(2) %></span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Shipping:</span>
                                    <span>â‚¹50.00</span>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between mb-3">
                                    <strong>Total:</strong>
                                    <strong>â‚¹<%= (parseFloat(cartTotal || 0) + 50).toFixed(2) %></strong>
                                </div>
                            </div>
                        </div>
                        
                        <div class="card mt-3">
                            <div class="card-body">
                                <h6>ðŸ“¦ Delivery Information</h6>
                                <p class="small text-muted">
                                    Orders are typically delivered within 3-5 business days. 
                                    You will receive a confirmation email with tracking information.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>