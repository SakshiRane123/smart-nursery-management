<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Nursery Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/header') %>
    <%- include('../partials/navigation') %>

    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <% if (typeof success !== 'undefined' && success === 'true') { %>
                    <div class="alert alert-success">
                        <h4>üéâ Order Placed Successfully!</h4>
                        <p>Thank you for your order. Your order ID is #<%= order.id %>.</p>
                    </div>
                <% } %>

                <h2 class="mb-4">Order Details #<%= order.id %></h2>
                
                <div class="row">
                    <div class="col-lg-8">
                        <div class="card">
                            <div class="card-header">
                                <h5>Order Items</h5>
                            </div>
                            <div class="card-body">
                                <% items.forEach(item => { %>
                                    <div class="order-item mb-3 p-3 border rounded">
                                        <div class="row align-items-center">
                                            <div class="col-md-2">
                                                <img src="<%= item.image_url || '/images/placeholder-plant.jpg' %>" 
                                                     alt="<%= item.name %>" 
                                                     class="img-fluid rounded" 
                                                     style="height: 60px; width: 60px; object-fit: cover;">
                                            </div>
                                            <div class="col-md-4">
                                                <h6 class="mb-1"><%= item.name %></h6>
                                            </div>
                                            <div class="col-md-2">
                                                <span>√ó<%= item.quantity %></span>
                                            </div>
                                            <div class="col-md-2">
                                                <span>‚Çπ<%= item.price %></span>
                                            </div>
                                            <div class="col-md-2">
                                                <strong>‚Çπ<%= (item.price * item.quantity).toFixed(2) %></strong>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-header">
                                <h5>Order Summary</h5>
                            </div>
                            <div class="card-body">
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Order Status:</span>
                                    <span class="badge 
                                        <% if (order.status === 'delivered') { %>bg-success<% } %>
                                        <% if (order.status === 'pending') { %>bg-warning<% } %>
                                        <% if (order.status === 'confirmed') { %>bg-info<% } %>
                                        <% if (order.status === 'shipped') { %>bg-primary<% } %>
                                        <% if (order.status === 'cancelled') { %>bg-danger<% } %>">
                                        <%= order.status %>
                                    </span>
                                </div>
                                
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Order Date:</span>
                                    <span><%= new Date(order.order_date).toLocaleDateString() %></span>
                                </div>
                                
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Items Total:</span>
                                    <span>‚Çπ<%= order.total_amount %></span>
                                </div>
                                
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Shipping:</span>
                                    <span>‚Çπ50.00</span>
                                </div>
                                
                                <hr>
                                <div class="d-flex justify-content-between mb-3">
                                    <strong>Total Paid:</strong>
                                    <strong>‚Çπ<%= (parseFloat(order.total_amount) + 50).toFixed(2) %></strong>
                                </div>
                            </div>
                        </div>
                        
                        <div class="card mt-3">
                            <div class="card-header">
                                <h5>Delivery Address</h5>
                            </div>
                            <div class="card-body">
                                <p class="mb-0"><%= order.delivery_address %></p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="mt-3">
                    <a href="/customer/orders" class="btn btn-secondary">‚Üê Back to Orders</a>
                    <a href="/customer/plants" class="btn btn-success">Continue Shopping</a>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>