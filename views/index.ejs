    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-5">Designed for Everyone</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 text-center">
                        <div class="card-body">
                            <i class="fas fa-user fa-3x text-primary mb-3"></i>
