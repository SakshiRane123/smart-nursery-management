<%- include('partials/header', { title: 'Dashboard' }) %>
<%- include('partials/navigation', { user: user }) %>

<main class="container my-5">
    <div class="row">
        <div class="col-12">
            <div class="alert alert-success">
                <h2><i class="fas fa-user me-2"></i>Welcome, <%= user.first_name %>!</h2>
                <p>You are logged in as a <strong>customer</strong>.</p>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fas fa-shopping-cart fa-3x text-primary mb-3"></i>
                            <h5>My Orders</h5>
                            <p>View your plant orders</p>
                            <a href="/orders" class="btn btn-outline-primary">View Orders</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fas fa-heart fa-3x text-danger mb-3"></i>
                            <h5>Wishlist</h5>
                            <p>Your favorite plants</p>
                            <a href="/wishlist" class="btn btn-outline-danger">View Wishlist</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fas fa-user-circle fa-3x text-success mb-3"></i>
                            <h5>Profile</h5>
                            <p>Manage your account</p>
                            <a href="/profile" class="btn btn-outline-success">Edit Profile</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('partials/footer') %>